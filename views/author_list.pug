extends layout

block content
    hr
    div(class='row mb-2')
        div(class='col-12')
            h1(class='mb-4') Author List
            if author_list.length
                div(class='table-responsive-md')
                    table(class='table table-bordered table-striped table-sm')
                        thead
                            tr(class='table-primary')
                                th First Name
                                th Family Name
                                th Date of Birth
                                th Date of Death
                                th(style='width:180px;')
                        tbody
                            each author in author_list
                                tr
                                    td #{author.first_name}
                                    td #{author.family_name}
                                    td #{author.date_of_birth_yyyy_mm_dd}
                                    td #{author.date_of_death_yyyy_mm_dd}
                                    td.text-right
                                        a(href=author.url, class='btn btn-sm btn-info', role='button') View
                                        | &nbsp;
                                        a(href=author.url+'/update', class='btn btn-sm btn-primary', role='button') Update
                                        | &nbsp;
                                        a(href=author.url+'/delete', class='btn btn-sm btn-danger', role='button') Delete
            else
                div(class='alert alert-warning') No authors found.